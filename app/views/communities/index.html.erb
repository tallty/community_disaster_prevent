<!-- 社区 -->
<!-- 底部tabbar页 -->
<% content_for :title, "社区风险" %>

<div class="weui_container">
	<div class="weui_tab">
	    <div class="weui_tab_bd">
				<div class="weui_content">
					<div id="map_container"></div>
          <div class="head weui_tabbar">
            <div class="headTab headTabLeft col-xs-6">地图</div>
            <div class="headTab headTabRight col-xs-6">列表</div>
          </div>
          <div class="rightTabContent">
            <div class="rightTab rightTabUp alpha-bg">
              <a href="javascript:;" class="weui_tabbar_item">
                  <div class="weui_tabbar_icon">
                      <i class="iconfont">&#xe600;</i>
                  </div>
                  <p class="rightTabUp_label text-center">灾情上报</p>
              </a>
              <hr class="tab_hr">
            </div>
            <div class="rightTab rightTabDown alpha-bg">
              <a href="javascript:;" id="relaodMap" class="weui_tabbar_item">
                  <div class="weui_tabbar_icon">
                      <i class="iconfont">&#xe60c;</i>
                  </div>
                  <p class="rightTabDown_label text-center">刷新</p>
              </a>
            </div>
          </div>
				</div>
	    </div>
	    <%= render partial: "weixin_share/tabbar" %>
	</div>
</div>

<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=3903299664a0b6330ca4ddfc37b1af89"></script>
<script type="text/javascript">
  $(document).ready(function() {
    var height = $(window).height();
    var width = $(window).width();
      $("div#map_container").height(height);
      $("div#map_container").width(width);
  });

  $("#relaodMap").on("click",function(){
    window.location.reload();
  });

  var map = new AMap.Map('map_container',{
        resizeEnable: true,
        zoom: 10,
        center: [121.504,31.195]
  });
</script>