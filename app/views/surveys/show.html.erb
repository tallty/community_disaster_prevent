<div class="col-xs-12">
  <div class="row">你好, <%= @subscriber.nick_name %></div>
  <div class="form-divider"></div>
  <div class="row"><h3 style="text-align:center;"><%= @survey.s_title %></h3></div>
  <div class="row"><%= @survey.s_digest %></div>
  <hr class="form-divider" />
  <div class="row">
  <%= form_for @survey do |s| %>
    <%= s.hidden_field :subscriber, :value => @subscriber.openid %>
    <ul class="row" style="over-flow:hidden;">
      <% @survey.questions.each_with_index do |q, index| %>
        <li class="col-xs-12">
          <%= raw question_builder(q, index) %>
        </li>
      <% end %>
    </ul>
    <hr class="form-divider" />
    <div>
      <%= @survey.tag %>
    </div>
    <br/>
    <div class="row">
      <div class="btn-group btn-group-justified ">
        <%= s.submit "提交", :class => "btn btn-success bg-lg", :style => "width:100%" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
