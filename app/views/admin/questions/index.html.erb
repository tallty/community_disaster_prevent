<div class="row panel panel-default">
  <table id="questions-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
    <thead>
        <td>题目</td>
        <td>题型</td>
        <td>说明</td>
        <td>创建时间</td>
        <td width="200px">操作</td>
      </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.q_title %></td>
          <td><%= question.q_type %></td>
          <td><%= question.q_digest %></td>
          <td><%= question.created_at %></td>
          <td>
            <%= link_to '显示', admin_question_path(question), :class => "btn btn-xs btn-info" %>
            <%= link_to '编辑', edit_admin_question_path(question), :class => "btn btn-xs btn-primary" %>
            <%= link_to t('删除', :default => t("删除")),
              admin_question_path(question),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '新建题目', new_admin_question_path %>
</div>
<% content_for :scripts do %>
  <script type="text/javascript">
    $('#questions-table').dataTable({
      bAutoWidth: false,
      'oLanguage': {
        "oAria": {
            "sSortAscending": ": 升序排列",
            "sSortDescending": ": 降序排列"
        },
        "oPaginate": {
            "sFirst": "首页",
            "sLast": "末页",
            "sNext": "下页",
            "sPrevious": "上页"
        },
        "sEmptyTable": "没有相关记录",
        "sInfo": "第 _START_ 到 _END_ 条记录，共 _TOTAL_ 条",
        "sInfoEmpty": "第 0 到 0 条记录，共 0 条",
        "sInfoFiltered": "(从 _MAX_ 条记录中检索)",
        "sInfoPostFix": "",
        "sDecimal": "",
        "sThousands": ",",
        "sLengthMenu": "每页显示条数: _MENU_",
        "sLoadingRecords": "正在载入...",
        "sProcessing": "正在载入...",
        "sSearch": "搜索:",
        "sSearchPlaceholder": "",
        "sUrl": "",
        "sZeroRecords": "没有相关记录"
      }
    });
  </script>
<% end %>
