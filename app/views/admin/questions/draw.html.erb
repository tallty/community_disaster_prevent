<div class="row panel panel-default">
  <h3>
    题目: <%= @question.q_title %> [<%= @question.q_type %>]
  </h3>
  <table id="results-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
    <thead>
      <td>选项</td>
      <td>总数</td>
    </thead>

    <tbody>
      <% @survey_results.each do |result| %>
        <tr>
          <td><%= @question.options.where(id: result[0]).first.option_title %></td>
          <td><%= result[-1] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Back', admin_survey_result_path(@survey) %>
