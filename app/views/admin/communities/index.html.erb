<p id="notice"><%= notice %></p>
<div class="row panel panel-default">
  <table id="communities-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
    <thead>
      <td width="200px">所属区县</td>
      <td>街道</td>
      <td>类型</td>
      <td>状态</td>
      <td width="200px">操作</td>
    </thead>

    <tbody>
      <% @communities.each do |commun| %>
        <tr>
          <td><%= commun.district %></td>
          <td><%= commun.street %></td>
          <td><%= commun.c_type %></td>
          <td><%= commun.status %></td>
          <td>
            <%= link_to '显示', admin_community_path(commun), :class => "btn btn-xs btn-info" %>
            <%= link_to '切换状态', switch_admin_community_path(commun), :class => "btn btn-xs btn-info" %>
            <%= link_to '编辑', edit_admin_community_path(commun), :class => "btn btn-xs btn-primary" %>
            <%= link_to t('删除', :default => t("删除")),
              admin_community_path(commun),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '添加街道', new_admin_community_path %>

<% content_for :scripts do %>
  <script type="text/javascript">
    $('#communities-table').dataTable({

      bAutoWidth: false
    });
  </script>
<% end %>
