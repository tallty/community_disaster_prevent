<p id="notice"><%= notice %></p>
<div class="row panel panel-default">
  <table id="volunteers-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
    <thead>
      <td width="200px">姓名</td>
      <td>电话</td>
      <td>小区</td>
      <td>居委会</td>
      <td width="200px">操作</td>
    </thead>

    <tbody>
      <% @volunteers.each do |volunteer| %>
        <tr>
          <td><%= volunteer.name %></td>
          <td><%= volunteer.tel %></td>
          <td><%= volunteer.commun %></td>
          <td><%= volunteer.neighborhood %></td>
          <td>
            <%= link_to '显示', admin_volunteer_path(volunteer), :class => "btn btn-xs btn-info" %>
            <%= link_to '编辑', edit_admin_volunteer_path(volunteer), :class => "btn btn-xs btn-primary" %>
            <%= link_to t('删除', :default => t("删除")),
              admin_volunteer_path(volunteer),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

