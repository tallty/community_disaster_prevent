<div class="acticle_container">
  <div class="article">
    <div class="hd">
      <h3 class="page_title">灾情点详情</h3>
    </div>
    <div class="bd">
      <article class="weui_article">
        <section>
          <section>
            <h1>基本信息</h1>
            <p> • 时间: <%= @disaster.occur_time.strftime("%Y-%m-%d %H:%M") %></p>
            <p> • 类型: <%= @disaster.disaster_type %></p>
            <p> • 说明: <%= @disaster.explain %></p>
            <p> • 地址: <%= @disaster.disaster_position.try(:address) %></p>
          </section>
          <section>
            <h1>灾情照片</h1>
            <% if @disaster.disaster_pictures.empty? %>
              <p>该灾情暂无上传图片！</p>
            <% else %>
              <p>
                <% @disaster.disaster_pictures.each do |picture| %>
                  <%= image_tag picture.image.url(:medium) %>
                <% end %>
              </p>
            <% end %>
          </section>
        </section>
      </article>
    </div>
  </div>
</div>