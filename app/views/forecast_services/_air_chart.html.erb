<script type="text/javascript">
	$(function() {
		// 基于准备好的dom，初始化echarts实例
	  var myChart = echarts.init(document.getElementById('<%= dom_id %>'));
	  // 指定图表的配置项和数据
	  var option = {
	    grid: {
	      show: false,
	      left: 32,
	      right: 14,
	      top: 18,
	      bottom: 42
	    },
	    tooltip: { 
	    	trigger: 'axis' 
	    },
	    xAxis:  {
	      type: 'category',
	      axisLabel: {
	        formatter: function(value, index) {
	        	var date = new Date(value);
	        	var texts = date.getHours() + '时\n' +(date.getMonth() + 1) + "-" + date.getDate();
				    return texts;
	        },
          textStyle: {
				    color: '#fff',
				    fontWeight: 100
				  }
	      },
	      boundaryGap: true,
	      data: <%= raw time %>,
	      axisLine: { show: false },
	      axisTick: { show: false },
	      splitLine: { show: false }
	    },
	    yAxis: {
	      type: 'value',
	      // min: 0,
	      // max: 200,
	      // splitNumber: 5,
	      axisLabel: {
	        formatter: '{value}',
          textStyle: {
				    color: '#fff'
				  }
	      },
	      axisLine: { show: false },
	      axisTick: { show: false },
	      splitLine: {
	      	lineStyle: {
	      		color: '#fff',
	      		opacity: 0.3
	      	}
	      }
	    },
	    series: [
	      {
	        name:'最高气温',
	        type:'line',
	        data: <%= data %>,
	        // 图标标注
	        markPoint: {
            showSymbol: false,
            // 标注的样式
            itemStyle: {
					    normal: {
					    	color: 'rgba(255, 255, 255, 0)'
					    }
						}
	        },
	       	// 线条样式
	       	lineStyle: {
            normal: {
              color: '#ffffff',
              width: 1
            }
	        },
	        // 折线拐点标志的样式
	        itemStyle: {
				    normal: {
			    		color: '#fff',
			    		borderColor: '#fff',
			    		borderWidth: 4
				    }
					}
	      }
	    ]
		};
	  // 使用刚指定的配置项和数据显示图表。
	  myChart.setOption(option);
	});
</script>