<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="rich_media_title"><%= @article.title %></h2>
    </div>
    <div class="col-xs-12 rich_media_meta_list">
      <em><%= @article.created_at.strftime("%Y-%m-%d") %></em>
      <em><%= @article.author %></em>
      <em>上海市社区气象安全一点通</em>
    </div>
    <div class="col-xs-12">
      <%= @article.content.html_safe %>
    </div>
    <div>
      <% if @article.thumb_media_url.present? %>
        <%= image_tag @article.thumb_media_url, class: "show_pic", width: "100%", alt: "文章列表图"%>
      <% else %>
        <%= image_tag "community2.png", class: "show_pic", alt: "文章列表图"%>
      <% end -%>
    </div>
  </div>
</div>